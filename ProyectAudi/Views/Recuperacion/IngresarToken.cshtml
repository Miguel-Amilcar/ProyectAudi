@model ProyectAudi.Modelspartial.IngresarTokenViewModel
@{
    ViewData["Title"] = "Validar token";
    ViewData["OcultarHeader"] = true;
}

<div class="main-wrapper">
    <div class="login-card">
        <div class="login-image">
            <img src="~/img/restablecer-la-contrasena.png" alt="Token" />
        </div>

        <div class="login-form">
            <h2>Validar token y cambiar contraseña</h2>

            <form asp-action="ValidarTokenYActualizarPassword" method="post">
                <div class="form-group">
                    <label for="Token">Token de 6 dígitos</label>
                    <input asp-for="Token" class="form-control" maxlength="6" placeholder="Ej. 123456" autocomplete="off" />
                    <span asp-validation-for="Token" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="NuevaContrasena">Nueva contraseña</label>
                    <input asp-for="NuevaContrasena" class="form-control" type="password" placeholder="Ingresa tu nueva contraseña" autocomplete="off" />
                    <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ConfirmarContrasena">Confirmar contraseña</label>
                    <input asp-for="ConfirmarContrasena" class="form-control" type="password" placeholder="Confirma tu nueva contraseña" autocomplete="off" />
                    <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Cambiar contraseña</button>

            </form>


            <div class="mt-3 text-center">
                <a asp-controller="Recuperacion" asp-action="SolicitarToken">¿No recibiste el token?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <script src="~/js/limpiarFormulario.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

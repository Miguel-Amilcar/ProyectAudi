@model ProyectAudi.Modelspartial.CredencialesViewModel

<div class="login-card">
    <div class="login-image">
        <img src="~/img/login-illustration.png" alt="Ilustración de login" />
    </div>

    <div class="login-form">
        <h2>Bienvenido de nuevo</h2>

        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="text-danger">@error.ErrorMessage</div>
        }

        <form asp-action="Index" method="post">
            <div class="form-group">
                <label>Usuario</label>
                <input asp-for="Usuario" type="text" autocomplete="username" aria-label="Usuario" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Contraseña</label>
                <input asp-for="Contrasena" type="password" autocomplete="current-password" aria-label="Contraseña" />
            </div>

            <button type="submit">Ingresar</button>

            <div class="mt-3 text-center">
                <a asp-controller="Credenciales" asp-action="RecuperarContrasena" class="text-decoration-none text-primary">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>
        </form>
    </div>
</div>

@model ProyectAudi.Modelspartial.CredencialesViewModel
@{
    ViewData["OcultarHeader"] = true;
}


<div class="login-card">
    <div class="login-image">
        <img src="~/img/login-illustration.png" alt="Ilustración de login" />
    </div>

    <div class="login-form">
        <h2>Bienvenido de nuevo</h2>

        @if (TempData["BloqueoRecuperacion"] != null)
        {
            <div class="alert alert-danger">
                @TempData["BloqueoRecuperacion"]
            </div>
        }

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success">
                @TempData["Mensaje"]
            </div>
        }

        <form asp-action="Index" method="post" autocomplete="off">
            <div class="form-group">
                <label asp-for="Usuario">Usuario</label>
                <input asp-for="Usuario" class="form-control" placeholder="Ingresa tu usuario" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrasena">Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <button type="submit">Ingresar</button>

            <div class="mt-3 text-center">
                @if (TempData["BloqueoRecuperacion"] == null)
                {
                    <a asp-controller="Recuperacion" asp-action="SolicitarToken">
                        ¿Olvidaste tu contraseña?
                    </a>
                }
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <script src="wwwroot/js/limpiarFormulario.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
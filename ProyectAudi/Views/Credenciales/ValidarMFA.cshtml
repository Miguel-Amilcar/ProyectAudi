@model ProyectAudi.Modelspartial.VerificarMfaViewModel
@{
    ViewData["OcultarHeader"] = true;
}

<div class="mfa-card">
    <div class="mfa-form">
        <h2>Autenticación en dos pasos</h2>

        @* Mensaje de error general bien posicionado *@
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
        {
            <div class="alert alert-danger text-center mb-3">
                @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="ValidarMFA" method="post">
            <div class="form-group">
                <label asp-for="CodigoMFA">Código MFA</label>
                <input asp-for="CodigoMFA" type="number" class="form-control" placeholder="Ingresa tu código" />
                <span asp-validation-for="CodigoMFA" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-controller="Credenciales" asp-action="Index" style="text-decoration: none;">Regresar al inicio de sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/limpiarFormulario.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

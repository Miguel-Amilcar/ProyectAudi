@model ProyectAudi.ViewModels.Crear_Contraseña.CreateViewModel

@{
    ViewData["Title"] = "Crear credencial";
    var permisos = ViewBag.Permisos as HashSet<string> ?? new HashSet<string>();
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

@if (permisos.Contains("CREAR"))
{
    <h2 class="mb-4 text-primary">
        <i class="bi bi-plus-circle-fill"></i> Crear nueva credencial
    </h2>

    @using (Html.BeginForm("Create", "Crear_Contraseñas", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <strong>Datos de acceso</strong>
            </div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.USUARIO_NOMBRE, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.USUARIO_NOMBRE, new { @class = "form-control", placeholder = "Ej. admin.admin" })
                    @Html.ValidationMessageFor(m => m.USUARIO_NOMBRE, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.PlainPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.PlainPassword, new { @class = "form-control", placeholder = "Ej. Seguro#545" })
                    @Html.ValidationMessageFor(m => m.PlainPassword, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repetir contraseña" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <strong>Asignación de usuario</strong>
            </div>
            <div class="card-body row g-3">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.USUARIO_ID, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.USUARIO_ID, ViewBag.Usuarios as List<SelectListItem>, "Seleccione un usuario", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.USUARIO_ID, "", new { @class = "text-danger" })
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.NombreCompletoUsuario))
                {
                    <div class="col-md-12">
                        <div class="alert alert-info mt-3">
                            <strong>Asignando credencial a:</strong> @Model.NombreCompletoUsuario
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="botones-permisos d-flex justify-content-end align-items-center gap-2 mt-4">
            <button type="submit" class="btn btn-success px-3 py-1">
                <i class="bi bi-check-circle-fill me-1"></i> Guardar credencial
            </button>
            <a asp-action="Index" asp-controller="Crear_Contraseñas" class="btn btn-outline-secondary px-3 py-1 d-inline-flex align-items-center">
                <i class="bi bi-x-circle me-1"></i> Cancelar
            </a>
        </div>
    }
}
else
{
    <div class="alert alert-warning">
        <i class="bi bi-shield-lock"></i> No tenés permiso para crear credenciales.
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

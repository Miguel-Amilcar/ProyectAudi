@model List<ProyectAudi.ViewModels.Crear_Contraseña.IndexViewModel>

@using ProyectAudi.Services

@{
    ViewData["Title"] = "Listado de Credenciales";
    var permisos = ViewBag.Permisos as HashSet<string> ?? new HashSet<string>();
}

<h2 class="mb-4 text-primary">
    <i class="bi bi-key-fill"></i> Credenciales registradas
</h2>

@if (permisos.Any())
{
    <div class="alert alert-info">
        <strong>Permisos activos para este rol:</strong>
        <ul class="mb-0">
            @foreach (var p in permisos.OrderBy(p => p))
            {
                <li>@p</li>
            }
        </ul>
    </div>
}
else
{
    <div class="alert alert-warning">Este rol no tiene permisos asignados o no se detectó el rol.</div>
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-primary text-white">
        <strong>Listado general</strong>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light text-center">
                <tr>
                    <th>Usuario</th>
                    <th>ID Usuario</th>
                    <th>MFA</th>
                    <th>IP Último Login</th>
                    <th>Navegador</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.USUARIO_NOMBRE</td>
                        <td>@item.USUARIO_ID</td>
                        <td>
                            <span class="badge @(item.MFA_ENABLED ? "bg-success" : "bg-secondary")">
                                @(item.MFA_ENABLED ? "Sí" : "No")
                            </span>
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(item.ULTIMA_IP) ? "—" : item.ULTIMA_IP)</td>
                        <td>@(string.IsNullOrWhiteSpace(item.ULTIMO_USER_AGENT) ? "—" : item.ULTIMO_USER_AGENT)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                @if (PermisoService.Tiene(permisos, "VER"))
                                {
                                    <a asp-action="Details" asp-route-id="@item.CREDENCIAL_ID" class="btn btn-outline-warning btn-sm" title="Ver detalles">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                }

                                @if (PermisoService.Tiene(permisos, "EDITAR"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.CREDENCIAL_ID" class="btn btn-outline-primary btn-sm" title="Editar credencial">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                }

                                @if (PermisoService.Tiene(permisos, "ELIMINAR"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.CREDENCIAL_ID" class="btn btn-outline-danger btn-sm" title="Eliminar credencial">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                }
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (permisos.Contains("CREAR"))
{
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus-fill"></i> Crear nueva credencial
    </a>
}
@model ProyectAudi.ViewModels.Crear_Contraseña.EditViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2 class="mb-4 text-warning">
    <i class="bi bi-pencil-square"></i> Editar credencial
</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CREDENCIAL_ID)

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body row g-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.USUARIO_NOMBRE, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.USUARIO_NOMBRE, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.USUARIO_NOMBRE, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(m => m.USUARIO_ID, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.USUARIO_ID, ViewBag.Usuarios as List<SelectListItem>, "Seleccione un usuario", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.USUARIO_ID, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.LabelFor(m => m.INTENTOS_FALLIDOS, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.INTENTOS_FALLIDOS, new { @class = "form-control", type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.INTENTOS_FALLIDOS, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.LabelFor(m => m.MFA_ENABLED, new { @class = "form-label" })
                <div class="form-check mt-2">
                    @Html.CheckBoxFor(m => m.MFA_ENABLED, new { @class = "form-check-input" })
                    <label class="form-check-label">Activar MFA</label>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
        <button type="submit" class="btn btn-warning">
            <i class="bi bi-save2"></i> Guardar cambios
        </button>
    </div>
</form>

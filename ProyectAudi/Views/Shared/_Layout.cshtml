<!DOCTYPE html>
<html lang="es">
<head>
    <!-- ======= META BÁSICOS ======= -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ======= TÍTULO DINÁMICO ======= -->
    <title>@ViewData["Title"] - ProyectoAudi</title>

    <!-- ======= CSS GLOBAL ======= -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

    <!-- Bootstrap & Icons desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <!-- ======= SECCIÓN DE ESTILOS POR VISTA ======= -->
    @RenderSection("Styles", required: false)
    @RenderSection("HeadMeta", required: false)
</head>

<body>
    @{
        var currentController = (ViewContext.RouteData.Values["Controller"]?.ToString() ?? "");
        bool ocultarChrome = string.Equals(currentController, "Credenciales", System.StringComparison.OrdinalIgnoreCase)
        || (ViewBag.HideChrome as bool? ?? false);
    }

    @if (ocultarChrome)
    {
        <!-- ======= Vista LIMPIA ======= -->
        <main class="main-wrapper" role="main">
            @RenderBody()
        </main>
    }
    else
    {
        <!-- ======= Shell GLOBAL ======= -->
        <div class="page-home">
            <div class="dashboard-shell">
                @await Html.PartialAsync("header")
                @await Html.PartialAsync("sidebar")

                <main class="dashboard-main" role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    }

    <!-- ======= MODALES GLOBALES (opcional) ======= -->
    @RenderSection("Modals", required: false)

    <!-- ======= SCRIPTS GLOBALES ======= -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js"></script>

    <!-- Sidebar toggle -->
    <script>
        (function () {
            const btn = document.getElementById('btnSidebar');

            function toggleSidebar() {
                if (window.matchMedia('(max-width: 992px)').matches) {
                    document.body.classList.toggle('sidebar-open');
                } else {
                    document.body.classList.toggle('sidebar-collapsed');
                }
            }

            btn && btn.addEventListener('click', toggleSidebar);

            document.addEventListener('click', function (ev) {
                if (!document.body.classList.contains('sidebar-open')) return;
                const sidebar = document.getElementById('sidebar');
                const isInsideSidebar = sidebar && sidebar.contains(ev.target);
                const isButton = btn && btn.contains(ev.target);
                if (!isInsideSidebar && !isButton) document.body.classList.remove('sidebar-open');
            });
        })();
    </script>

    <!-- ======= SCRIPTS POR VISTA ======= -->
    @RenderSection("Scripts", required: false)
</body>
</html>

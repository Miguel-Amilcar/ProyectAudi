@model IEnumerable<ProyectAudi.ViewModels.Permisos.IndexViewModel>

@{
    ViewData["Title"] = "Listado de Permisos";
}

<h2>Listado de Permisos</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Rol</th>
            <th>Creado por</th>
            <th>Fecha creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var permiso in Model)
        {
            <tr>
                <td>@permiso.PERMISO_NOMBRE</td>
                <td>@permiso.DESCRIPCION</td>
                <td>@permiso.ROL_NOMBRE</td>
                <td>@permiso.CREADO_POR</td>
                <td>@permiso.FECHA_CREACION.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@permiso.PERMISO_ID">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@permiso.PERMISO_ID">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@permiso.PERMISO_ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear nuevo permiso</a>

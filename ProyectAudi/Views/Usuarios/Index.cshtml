@model List<ProyectAudi.ViewModels.Usuario.IndexViewModel>

@using ProyectAudi.Services

@{
    ViewData["Title"] = "Listado de Usuarios";
    var permisos = ViewBag.Permisos as HashSet<string> ?? new HashSet<string>();
}

<h2 class="mb-4 text-primary"><i class="bi bi-people-fill"></i> Usuarios registrados</h2>

@if (permisos.Any())
{
    <div class="alert alert-info">
        <strong>Permisos activos para este rol:</strong>
        <ul class="mb-0">
            @foreach (var p in permisos.OrderBy(p => p))
            {
                <li>@p</li>
            }
        </ul>
    </div>
}
else
{
    <div class="alert alert-warning">Este rol no tiene permisos asignados o no se detectó el rol.</div>
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-primary text-white">
        <strong>Listado general</strong>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-header-azul text-center">
                <tr>
                    <th>CUI</th>
                    <th>Nombre completo</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    var estadoTexto = usuario.ESTADO_TINY switch
                    {
                        0 => "Inactivo",
                        1 => "Activo",
                        2 => "Suspendido",
                        _ => "Desconocido"
                    };

                    var estadoClase = usuario.ESTADO_TINY switch
                    {
                        0 => "badge bg-secondary",
                        1 => "badge bg-success",
                        2 => "badge bg-warning text-dark",
                        _ => "badge bg-dark"
                    };

                    <tr>
                        <td>@usuario.CUI</td>
                        <td>@usuario.NombreCompleto</td>
                        <td>@usuario.USUARIO_CORREO</td>
                        <td>@usuario.TELEFONO</td>
                        <td>@usuario.RolNombre</td>
                        <td class="text-center">
                            <span class="@estadoClase px-2 py-1">@estadoTexto</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                @if (PermisoService.Tiene(permisos, "VER"))
                                {
                                    <a asp-action="Details" asp-route-id="@usuario.USUARIO_ID" class="btn btn-outline-warning btn-sm" title="Ver detalles">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                }

                                @if (PermisoService.Tiene(permisos, "EDITAR"))
                                {
                                    <a asp-action="Edit" asp-route-id="@usuario.USUARIO_ID" class="btn btn-outline-primary btn-sm" title="Editar usuario">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                }

                                @if (PermisoService.Tiene(permisos, "ELIMINAR"))
                                {
                                    <a asp-action="Delete" asp-route-id="@usuario.USUARIO_ID" class="btn btn-outline-danger btn-sm" title="Eliminar usuario">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (permisos.Contains("CREAR"))
{
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus-fill"></i> Crear nuevo usuario
    </a>
}

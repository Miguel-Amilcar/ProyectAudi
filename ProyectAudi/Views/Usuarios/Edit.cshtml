@model ProyectAudi.ViewModels.Usuario.EditViewModel


@{
    ViewData["Title"] = "Editar usuario";
    var permisos = ViewBag.Permisos as HashSet<string> ?? new HashSet<string>();
}


@if (permisos.Contains("EDITAR"))
{
<h2 class="mb-4 text-primary">
    <i class="bi bi-pencil-square"></i> Editar usuario
</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="USUARIO_ID" />
    <input type="hidden" asp-for="MODIFICADO_POR" value="@User.Identity?.Name" />

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white">
            <strong><i class="bi bi-person-fill me-1"></i> Datos personales</strong>
        </div>
        <div class="card-body">
            <div class="row gy-3">
                <div class="col-md-6">
                    <label for="CUI" class="form-label">Cui</label>
                    <input asp-for="CUI" class="form-control" />
                    <span asp-validation-for="CUI" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="PRIMERNOMBRE" class="form-label">Primer nombre</label>
                    <input asp-for="PRIMERNOMBRE" class="form-control" />
                    <span asp-validation-for="PRIMERNOMBRE" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="SEGUNDONOMBRE" class="form-label">Segundo nombre</label>
                    <input asp-for="SEGUNDONOMBRE" class="form-control" />
                    <span asp-validation-for="SEGUNDONOMBRE" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="TERCERNOMBRE" class="form-label">Tercer nombre</label>
                    <input asp-for="TERCERNOMBRE" class="form-control" />
                    <span asp-validation-for="TERCERNOMBRE" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="PRIMERAPELLIDO" class="form-label">Primer apellido</label>
                    <input asp-for="PRIMERAPELLIDO" class="form-control" />
                    <span asp-validation-for="PRIMERAPELLIDO" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="SEGUNDOAPELLIDO" class="form-label">Segundo apellido</label>
                    <input asp-for="SEGUNDOAPELLIDO" class="form-control" />
                    <span asp-validation-for="SEGUNDOAPELLIDO" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="APELLIDOCASADA" class="form-label">Apellido de casada</label>
                    <input asp-for="APELLIDOCASADA" class="form-control" />
                    <span asp-validation-for="APELLIDOCASADA" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="FECHA_NACIMIENTO" class="form-label">Fecha de nacimiento</label>
                    <input asp-for="FECHA_NACIMIENTO" type="date" class="form-control" />
                    <span asp-validation-for="FECHA_NACIMIENTO" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="TELEFONO" class="form-label">Teléfono</label>
                    <input asp-for="TELEFONO" class="form-control" />
                    <span asp-validation-for="TELEFONO" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="DIRECCION" class="form-label">Dirección</label>
                    <input asp-for="DIRECCION" class="form-control" />
                    <span asp-validation-for="DIRECCION" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-secondary text-white">
            <strong><i class="bi bi-file-earmark-text-fill me-1"></i> Datos fiscales</strong>
        </div>
        <div class="card-body">
            <div class="row gy-3">
                <div class="col-md-6">
                    <label for="PERSONA_NIT" class="form-label">Nit</label>
                    <input asp-for="PERSONA_NIT" class="form-control" />
                    <span asp-validation-for="PERSONA_NIT" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="PERSONA_DIRECCION" class="form-label">Dirección fiscal</label>
                    <input asp-for="PERSONA_DIRECCION" class="form-control" />
                    <span asp-validation-for="PERSONA_DIRECCION" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="PERSONA_TELEFONOCASA" class="form-label">Teléfono casa</label>
                    <input asp-for="PERSONA_TELEFONOCASA" class="form-control" />
                    <span asp-validation-for="PERSONA_TELEFONOCASA" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="PERSONA_TELEFONOMOVIL" class="form-label">Teléfono móvil</label>
                    <input asp-for="PERSONA_TELEFONOMOVIL" class="form-control" />
                    <span asp-validation-for="PERSONA_TELEFONOMOVIL" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-info text-white">
            <strong><i class="bi bi-gear-fill me-1"></i> Configuración de cuenta</strong>
        </div>
        <div class="card-body">
            <div class="row gy-3">
                <div class="col-md-6">
                    <label for="USUARIO_CORREO" class="form-label">Correo electrónico</label>
                    <input asp-for="USUARIO_CORREO" type="email" class="form-control" />
                    <span asp-validation-for="USUARIO_CORREO" class="text-danger"></span>
                </div>
                    @if (ViewBag.EsSuperAdmin == true)
                    {
                        <div class="form-group">
                            <label for="ROL_ID">Rol</label>
                            <select asp-for="ROL_ID" asp-items="ViewBag.Roles" class="form-control"></select>
                        </div>
                    }
                <div class="col-md-6">
                    <label class="form-label">Fotografía</label>
                    <input type="file" name="FotografiaFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="FotografiaFile" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label">DPI PDF</label>
                    <input type="file" name="DpiFile" class="form-control" accept=".pdf" />
                    <span asp-validation-for="DpiFile" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

        <div class="modal fade" id="confirmarEdicion" tabindex="-1" aria-labelledby="confirmarEdicionLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-md">
                <div class="modal-content border-0 shadow-lg rounded-4">
                    <div class="modal-header bg-warning text-dark rounded-top-4">
                        <h5 class="modal-title d-flex align-items-center" id="confirmarEdicionLabel">
                            <i class="bi bi-pencil-square me-2 fs-4"></i>
                            Confirmar edición
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>

                    <div class="modal-body px-4 py-3">
                        <div class="alert alert-warning d-flex align-items-center mb-3" role="alert">
                            <i class="bi bi-info-circle-fill me-2 fs-5 text-warning"></i>
                            <div>
                                ¿Estás seguro que querés guardar los cambios para <strong>@Model.NombreCompleto</strong>?
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer px-4 py-3 border-top-0 d-flex flex-wrap justify-content-end gap-3">
                        <form asp-action="EditConfirmed" asp-controller="Usuarios" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="USUARIO_ID" />
                            <input type="hidden" asp-for="MODIFICADO_POR" value="@User.Identity?.Name" />
                            <button type="submit" class="btn btn-warning px-4 text-dark">
                                <i class="bi bi-check-circle-fill me-1"></i> Sí, guardar
                            </button>
                            <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="botones-permisos d-flex justify-content-end align-items-center gap-2 mt-4">
            <button type="button" class="btn btn-warning px-3 py-1 text-dark" data-bs-toggle="modal" data-bs-target="#confirmarEdicion">
                <i class="bi bi-pencil-square me-1"></i> Guardar cambios
            </button>
            <a asp-action="Index" asp-controller="Usuarios" class="btn btn-outline-secondary px-3 py-1 d-inline-flex align-items-center">
                <i class="bi bi-x-circle me-1"></i> Cancelar
            </a>
        </div>


</form>

}
else
{
<div class="alert alert-warning">
    <i class="bi bi-shield-lock"></i> No tenés permiso para editar usuarios.
</div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

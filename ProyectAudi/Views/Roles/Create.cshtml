@model ProyectAudi.ViewModels.Roles.CreateViewModel
@using ProyectAudi.Services

@{
    ViewData["Title"] = "Crear Rol";
    var permisos = ViewBag.Permisos as HashSet<string> ?? new HashSet<string>();
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

@if (permisos.Contains("CREAR"))
{
    <h2 class="mb-4 text-primary"><i class="bi bi-person-plus-fill"></i> Crear nuevo rol</h2>

    @using (Html.BeginForm("Create", "Roles", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <strong>Datos del rol</strong>
            </div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.ROL_NOMBRE, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ROL_NOMBRE, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ROL_NOMBRE, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.ROL_DESCRIPCION, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ROL_DESCRIPCION, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ROL_DESCRIPCION, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="botones-permisos d-flex justify-content-end align-items-center gap-2 mt-4">
            <button type="submit" class="btn btn-success px-3 py-1">
                <i class="bi bi-check-circle-fill me-1"></i> Guardar rol
            </button>
            <a asp-action="Index" asp-controller="Roles" class="btn btn-outline-secondary px-3 py-1 d-inline-flex align-items-center">
                <i class="bi bi-x-circle me-1"></i> Cancelar
            </a>
        </div>
    }
}
else
{
    <div class="alert alert-warning">
        <i class="bi bi-shield-lock"></i> No tenés permiso para crear roles.
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model ProyectAudi.ViewModels.Roles.DetailsViewModel

@{
    ViewData["Title"] = "Detalles del Rol";
}

<h2>Detalles del Rol</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.ROL_NOMBRE</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.ROL_DESCRIPCION</dd>

        <dt class="col-sm-3">Administrativo</dt>
        <dd class="col-sm-9">@Model.ES_ADMINISTRATIVO</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.ESTADO</dd>

        <dt class="col-sm-3">Creado por</dt>
        <dd class="col-sm-9">@Model.CREADO_POR</dd>

        <dt class="col-sm-3">Fecha creación</dt>
        <dd class="col-sm-9">@Model.FECHA_CREACION.ToShortDateString()</dd>

        <dt class="col-sm-3">Modificado por</dt>
        <dd class="col-sm-9">@Model.MODIFICADO_POR</dd>

        <dt class="col-sm-3">Fecha modificación</dt>
        <dd class="col-sm-9">@Model.FECHA_MODIFICACION?.ToShortDateString()</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ROL_ID" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
